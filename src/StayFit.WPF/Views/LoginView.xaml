<Window x:Class="StayFit.WPF.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StayFit - Вхід" 
        Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#4CAF50" 
                Height="120">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="StayFit" 
                           FontSize="40" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Вхід до системи" 
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Форма входу -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    Margin="40,30">
            
            <TextBlock Text="Email" 
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="TxtEmail"
                     Height="40"
                     FontSize="16"
                     Padding="10"
                     BorderBrush="#BDBDBD"
                     BorderThickness="1"
                     Margin="0,0,0,20"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Пароль" 
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="TxtPassword"
                         Height="40"
                         FontSize="16"
                         Padding="10"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         Margin="0,0,0,10"/>

            <TextBlock x:Name="TxtError"
                       Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="14"
                       Margin="0,0,0,20"
                       TextWrapping="Wrap"/>

            <Button x:Name="BtnLogin"
                    Content="УВІЙТИ"
                    Height="45"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66BB6A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Text="Немає акаунту?"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,5"
                       FontSize="13"
                       Foreground="Gray"/>
            
            <Button x:Name="BtnRegister"
                    Content="Зареєструватися"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="Transparent"
                    Foreground="#4CAF50"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>