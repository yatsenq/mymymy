<Window x:Class="StayFit.WPF.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StayFit - Реєстрація" 
        Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="450">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#4CAF50" 
                Height="140">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="StayFit" 
                           FontSize="40" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Створення акаунту" 
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Форма реєстрації -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Top" 
                        Margin="40,30,40,40">
                
                <!-- Ім'я -->
                <TextBlock Text="Ім'я *" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtFirstName"
                         Height="40"
                         FontSize="16"
                         Padding="10"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         Margin="0,0,0,15"/>

                <!-- Прізвище -->
                <TextBlock Text="Прізвище *" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtLastName"
                         Height="40"
                         FontSize="16"
                         Padding="10"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email *" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtEmail"
                         Height="40"
                         FontSize="16"
                         Padding="10"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         Margin="0,0,0,15"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль *" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="TxtPassword"
                             Height="40"
                             FontSize="16"
                             Padding="10"
                             BorderBrush="#BDBDBD"
                             BorderThickness="1"
                             Margin="0,0,0,5"/>
                <TextBlock Text="Мінімум 6 символів" 
                           FontSize="12"
                           Foreground="Gray"
                           Margin="0,0,0,15"/>

                <!-- Підтвердження паролю -->
                <TextBlock Text="Підтвердити пароль *" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="TxtConfirmPassword"
                             Height="40"
                             FontSize="16"
                             Padding="10"
                             BorderBrush="#BDBDBD"
                             BorderThickness="1"
                             Margin="0,0,0,15"/>

                <!-- Дата народження -->
                <TextBlock Text="Дата народження" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <DatePicker x:Name="DateBirth"
                            Height="40"
                            FontSize="16"
                            Margin="0,0,0,15"
                            BorderBrush="#BDBDBD"
                            BorderThickness="1"/>

                <!-- Стать -->
                <TextBlock Text="Стать" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <RadioButton x:Name="RbMale"
                                 Content="Чоловік"
                                 GroupName="Gender"
                                 FontSize="14"
                                 Margin="0,0,30,0"
                                 IsChecked="True"/>
                    <RadioButton x:Name="RbFemale"
                                 Content="Жінка"
                                 GroupName="Gender"
                                 FontSize="14"/>
                </StackPanel>

                <!-- Помилка -->
                <TextBlock x:Name="TxtError"
                           Foreground="Red"
                           FontSize="14"
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"/>

                <!-- Кнопка реєстрації -->
                <Button x:Name="BtnRegister"
                        Content="ЗАРЕЄСТРУВАТИСЯ"
                        Click="BtnRegister_Click"
                        Height="50"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66BB6A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Повернутися до входу -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="Вже є акаунт?"
                               FontSize="14"
                               Foreground="Gray"
                               Margin="0,0,5,0"/>
                    <Button x:Name="BtnBackToLogin"
                            Content="Увійти"
                            Click="BtnBackToLogin_Click"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="Transparent"
                            Foreground="#4CAF50"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>